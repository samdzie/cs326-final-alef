{
  "compilerOptions": {
      "target": "es2016",
      "skipLibCheck": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitThis": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "strictNullChecks": true, // good idea not to disable
      "pretty": true,
      "module": "commonjs",
      "outDir": "./dist"
  },
  "include": [ "static/*.ts", 
    "classes/*.ts", 
    "controllers/*.ts", 
    "server.ts"]
}
